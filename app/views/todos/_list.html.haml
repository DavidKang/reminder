- count = 0
%table{ cellpadding: 0, cellspacing: 0 }
  %tr.header
    %th id
    %th project
    %th title
  - todos.each do |todo|
    - if date[count] == todo.due and !date[count].nil?
      %tr.date
        %td{ colspan: 3 }= todo.due
      - if date[count] == Date.today and todo.due != Date.today
        %tr.today
          %td{colspan: 3}= 'NO HAY TAREAS PARA HOY'
      - else
        %tr{ class: "#{todo.when?}"}
          %td= todo.id
          %td= todo.project
          %td= todo.title
      - count += 1
    - else
      %tr{ class: "#{todo.when?}"}
        %td= todo.id
        %td= todo.project
        %td= todo.title
  - if count < date.count || date.count == 0
    %tr.date
      %td{ colspan: 3 }= Date.today
    %tr.today
      %td{colspan: 3}= 'NO HAY TAREAS PARA HOY'

