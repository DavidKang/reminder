- count = 0
%table{ cellpadding: 0, cellspacing: 0 }
  %tr.header
    %th id
    %th project
    %th title
  - todos.each do |todo|
    - if date[count] == todo.due and !date[count].nil?
      %tr.date
        %td{ colspan: 3 }= todo.due
      - count += 1
    %tr{ class: "#{todo.when?}"}
      %td.id= "##{todo.id}"
      %td= todo.project
      %td= todo.title
